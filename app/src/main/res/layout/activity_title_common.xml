<RelativeLayout android:id="@+id/custom_title"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:layout_gravity="center_vertical"
                android:background="@color/app_topbg"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/left_btn"
        android:layout_width="@dimen/dimen_45"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/actionbar_btn"
        android:padding="13dp"
        android:src="@drawable/base_action_bar_back_normal"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@+id/right_btn"
        android:layout_toRightOf="@+id/left_btn"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_20sp"/>

    <ImageView
        android:id="@+id/right_btn"
        android:layout_width="45.0dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/actionbar_btn"
        android:src="@drawable/img_share"
        android:visibility="gone"
        android:padding="13dp"/>

    <Button
        android:id="@+id/right_btn2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/actionbar_btn"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/camerasdk_title_rlyt_right"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/camerasdk_title_txv_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textSize="@dimen/dimen_16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"/>

</RelativeLayout>