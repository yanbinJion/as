<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pic_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_img"
            android:layout_width="@dimen/dimen_new_list_img_w"
            android:layout_height="@dimen/dimen_new_list_img_h"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_new_list_img_h"
            android:layout_toLeftOf="@+id/pic_img"
            android:paddingTop="@dimen/dimen_7">

            <TextView
                android:id="@+id/pic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLines="2"
                android:textColor="@color/text_title"
                android:textSize="@dimen/dimen_18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pic_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/pic_custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@color/custom_text_color"
                    android:textColor="@color/white"
                    android:padding="@dimen/dimen_3"
                    android:textSize="@dimen/dimen_10sp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/pic_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:singleLine="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/dimen_10sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/pic_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/dimen_10sp"/>

                <TextView
                    android:id="@+id/pic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/dimen_10sp"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@color/line"/>
</LinearLayout>
