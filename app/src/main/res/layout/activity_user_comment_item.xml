<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10">

        <com.wisdomrouter.app.view.CircleImageView
            android:id="@+id/iv_person"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_man1"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_toRightOf="@+id/iv_person"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="huihui"
                android:textColor="@color/tv_collect_title"
                android:textSize="@dimen/dimen_16sp"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txt_name"
                android:text="2013-4-4"
                android:textColor="@color/tv_collect_time"
                android:textSize="@dimen/dimen_14sp"/>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:textColor="@color/news_text_title"
                android:textSize="@dimen/dimen_16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17"
                android:background="@color/tv_article_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_tu"
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_40"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:gravity="center_vertical|left"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="标题"
                    android:textColor="@color/tv_article_title"
                    android:textSize="@dimen/dimen_16sp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

</LinearLayout>