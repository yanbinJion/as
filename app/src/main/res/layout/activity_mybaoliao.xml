<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listview">


    <com.wisdomrouter.app.view.ViewPaperListView
        android:id="@+id/lv_disclose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@color/transparent" />

    <RelativeLayout
        android:id="@+id/re_disclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/tv_dis"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_disclose"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/btn_disclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dis"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_5"
            android:text="还没爆料过"
            android:textColor="#afafb0"
            android:textSize="@dimen/dimen_10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_baoliao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/app_topbg"
        android:gravity="center"
        android:padding="@dimen/dimen_10"
        android:text="来爆个料~"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_22sp" />

</RelativeLayout>