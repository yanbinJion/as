<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_bg_color"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_column"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_32"
        android:background="@color/main_tab_bg"
        android:orientation="horizontal">

        <com.wisdomrouter.app.view.Smarttablayout.SmartTabLayout
            android:id="@+id/viewpagertab"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_32"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:fillViewport="false"
            android:paddingLeft="@dimen/dimen_4"
            android:paddingRight="@dimen/dimen_4"
            app:stl_defaultTabTextSize="@dimen/dimen_18sp"
            app:stl_defaultTabTextColor="@color/text_color"
            app:stl_defaultTabTextHorizontalPadding="@dimen/dimen_18"
            app:stl_dividerColor="@color/transparent"
            app:stl_dividerThickness="@dimen/dimen_0"
            app:stl_indicatorColor="@color/app_topbg"
            app:stl_indicatorCornerRadius="@dimen/dimen_13"
            app:stl_indicatorGravity="center"
            app:stl_indicatorInterpolation="linear"
            app:stl_indicatorThickness="@dimen/dimen_25"
            app:stl_selectedTabTextColor="@color/white"
            app:stl_underlineColor="@color/transparent"
            app:stl_underlineThickness="@dimen/dimen_0"/>


        <LinearLayout
            android:id="@+id/ll_more_columns"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_32"
            >

            <ImageView
                android:id="@+id/button_more_columns"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginRight="@dimen/dimen_8"
                android:src="@drawable/channle_add"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/category_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>